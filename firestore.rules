rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to create their own document (for signup)
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update their own document
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to create parent user documents
      // This is needed when athletes create parent accounts
      allow create: if request.auth != null && 
                     request.resource.data.role == 1 && // parent role
                     request.resource.data.linkedAthleteId == request.auth.uid;
      
      // Allow athletes to update their own document (including parents list)
      allow update: if request.auth != null && 
                     (request.auth.uid == userId || 
                      // Allow athlete to update their own document's parents array
                      resource.data.role == 0); // athlete role
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

